<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>DutyRosterConverter %d{HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="dutyroster.ui" level="INFO"/>
    <logger name="dutyroster.ui.controller.DutyRosterImportController" level="DEBUG"/>
    <logger name="org.springframework" level="INFO"/>

</configuration>